@model BibliotecaUTS.Models.UsuariosViewModel
@{
    ViewBag.Title = "Usuarios";
}
<div ng-cloak ng-controller="UsuarioCtrl">
    <h2>
        Usuarios</h2>
    <button class="btn">
        Agregar Usuario</button>
    <input type="text" name="BuscarUsuario" placeholder="Buscar Usuario..." class="input-xlarge pull-right" />
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Usuario
                </th>
                <th class="hidden-phone">
                    Correo
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="usuario in viewModel.Usuarios">
                <td>
                    {{usuario.NombreUsuario}}
                </td>
                <td class="hidden-phone">
                    {{usuario.Correo}}
                </td>
                <td>
                    <button class="btn">
                        Modificar
                    </button>
                    <button class="btn">
                        Eliminar
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="pagination pagination-centered">
        <ul>
            <li><a href="#">«</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li class="hidden-phone"><a href="#">5</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/angular/Controllers/usuarioCtrl.js")
    <script type="text/javascript">
        $("#usuarioMenu").addClass("active");
        viewModel = @BibliotecaUTS.Core.Serializer.SerializeHtml(Model);
    </script>
}